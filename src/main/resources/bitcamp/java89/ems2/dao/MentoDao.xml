  <select id="getOne" parameterType="int" resultMap="mento-map">
    select 
      mno, 
      name, 
      age,
      mimg
    from membs
    where mno=#{memberNo}
  </select>
  
   <update id="update" parameterType="mento">
    update membs set
      mimg=#{photoPath} 
    where mno=#{memberNo}
  </update> 
  
  <select id="getOneByEmailPassword" parameterType="map" resultMap="mento-map">
    select 
      mno, 
      name, 
      age, 
      email,
      mimg
    from membs
    where email=#{email} 
      and pwd=password(#{password})
  </select>

  <select id="countByNo" parameterType="int" resultType="int">
    select count(*)
    from membs mb 
    where mb.mno=#{value}
